<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="chat-mapper">
  <select id="selectList" resultType="ChatDto">
  	SELECT *
  	FROM CHAT
  </select>
  <select id="selectOne" resultType="ChatDto">
  	SELECT*
  	FROM CHAT WHERE CHAT_TITLE = #{chat_title}
  </select>
   <select id="clientnum" resultType="ChatDto">
  	SELECT *
  	FROM CHAT WHERE CHAT_TITLE = #{chat_title}
  </select>
 <!--  <select id="selectOne" resultType="ChatDto">
  	SELECT CHAT_NO, USER_ID
  	FROM CHAT WHERE NAME = #{user_id}
  </select> -->
  <insert id="insert">
  	INSERT INTO CHAT VALUES(CHAT_SEQ.NEXTVAL,#{user_id}, #{chat_title},#{chat_public},#{chat_password}, 0)
  </insert>
  <update id="clientplus">
  	UPDATE CHAT SET CHAT_CLIENT = CHAT_CLIENT+1
  	WHERE CHAT_TITLE = #{chat_title}
  </update>
  <update id="clientminus">
  	UPDATE CHAT SET CHAT_CLIENT = CHAT_CLIENT-1
  	WHERE CHAT_TITLE = #{chat_title}
  </update>
  <delete id="deleteroom">
  	DELETE FROM CHAT
  	WHERE CHAT_TITLE = #{chat_title}
  </delete>
</mapper>
</mapper>